@model List<Work>

@{
	ViewData["Title"] = "Görevler";
}


@if (Model.Count != 0)
{
    <div style="display:grid;grid-template-columns:1fr 1fr;gap:10px;">
        @foreach (var work in Model)
        {
            <div class="card" style="width: 40rem;">
                <div class="card-body">
                    <h5 style="text-align:center">Yeni İş</h5>
                    <div style="background-color:lightgray;padding:10px 20px;margin:10px 0px">
                        <h5 class="card-title">@work.Title</h5>
                    </div>

                    <a asp-area="" asp-controller="Staff" asp-action="Read" asp-route-id="@work.WorkID" class="btn btn-outline-info">Okundu Olarak İşaretle</a>
                </div>
            </div>
        }
    </div>
    

}
else
{
    <div class="alert alert-warning" role="alert">
        Henüz bir iş eklenmemiş.
    </div>
}
